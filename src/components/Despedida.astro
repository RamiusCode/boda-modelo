                >
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="flex justify-center mt-10" id="flores-abajo-despedida">
        <img
          src="/imagenes/Separadores.webp"
          alt="Flores decorativas"
          class="w-40 md:w-48 lg:w-56 h-auto object-contain opacity-90"
        />
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== "undefined") {
    document.addEventListener("DOMContentLoaded", () => {
      console.log("ðŸ’‘ Iniciando secciÃ³n de despedida de boda...");

      // ðŸŽ¯ ESTADO INICIAL - Solo 3 elementos principales
      gsap.set("#flores-arriba-despedida", { opacity: 0, y: 20 });
      gsap.set("#card-despedida", { opacity: 0, y: 30 });
      gsap.set("#flores-abajo-despedida", { opacity: 0, y: 20 });

      // âœ¨ ANIMACIÃ“N SIMPLE Y SUAVE
      ScrollTrigger.create({
        trigger: "#flores-arriba-despedida",
        start: "top 85%",

        onEnter: () => {
          const tl = gsap.timeline();

          // Solo 3 animaciones principales - SIN stagger, SIN vibraciones
          tl.to(
            "#flores-arriba-despedida",
            {
              opacity: 1,
              y: 0,
              duration: 1,
              ease: "power2.out",
            },
            0,
          )
            .to(
              "#card-despedida",
              {
                opacity: 1,
                y: 0,
                duration: 1.2,
                ease: "power2.out",
              },
              0.2,
            )
            .to(
              "#flores-abajo-despedida",
              {
                opacity: 1,
                y: 0,
                duration: 1,
                ease: "power2.out",
              },
              0.4,
            );

          // ðŸŒ¸ Animaciones sutiles (despuÃ©s de que todo apareciÃ³)
          gsap.to("#linea-decorativa svg", {
            scale: 1.15,
            duration: 2.5,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 1.5,
          });

          gsap.to("#boton-confirmar a", {
            y: -6,
            duration: 3,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 1.5,
          });
        },

        onLeaveBack: () => {
          gsap.killTweensOf("#linea-decorativa svg");
          gsap.killTweensOf("#boton-confirmar a");

          gsap.set("#flores-arriba-despedida", { opacity: 0, y: 20 });
          gsap.set("#card-despedida", { opacity: 0, y: 30 });
          gsap.set("#flores-abajo-despedida", { opacity: 0, y: 20 });
        },
      });

      console.log("ðŸ’‘âœ¨ Â¡SecciÃ³n de despedida activada!");
    });
  }
</script>

<style>
  #card-despedida {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  #card-despedida:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(201, 169, 97, 0.2);
  }
</style>
